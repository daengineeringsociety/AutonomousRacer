{
    "name": "DeepRacer ROS 2 Dev",
    "dockerComposeFile": "docker-compose.yml",
    "service": "ros_dev",
    "workspaceFolder": "/workspaces/deepracer_project",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-iot.vscode-ros",
          "ms-vscode.cpptools",
          "redhat.vscode-yaml"
        ]
      }
    },
    "remoteUser": "daes",
    "shutdownAction": "stopContainer",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "containerEnv": {
        "SHELL": "/bin/bash"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "postCreateCommand": "sudo rosdep init && rosdep update && rosdep install --from-paths src --ignore-src -y"
  }